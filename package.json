{
	"name": "relationship",
	"description": "Sortable multiselect field for Kirby 3 CMS",
	"author": "Ola Christensson <ola.christensson@grandpublic.se>",
	"version": "0.0.1",
	"type": "kirby-field",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/olach/kirby3-relationship"
	},
	"scripts": {
		"build": "cross-env NODE_ENV=production rollup -c",
		"dev": "rollup -c",
		"watch": "rollup -cw"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	],
	"babel": {
		"presets": [
			[
				"@babel/env",
				{
					"modules": false
				}
			]
		]
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"devDependencies": {
		"@babel/core": "^7.2.2",
		"@babel/preset-env": "^7.2.3",
		"autoprefixer": "^9.4.3",
		"cross-env": "^5.2.0",
		"node-sass": "^4.10.0",
		"postcss": "^7.0.7",
		"rollup": "^1.0.0",
		"rollup-plugin-babel": "^4.2.0",
		"rollup-plugin-babel-minify": "^6.2.0",
		"rollup-plugin-postcss": "^1.6.3",
		"rollup-plugin-vue": "^4.3.2",
		"vue-template-compiler": "^2.5.21"
	}
}
